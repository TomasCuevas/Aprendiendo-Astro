---
import { Layout } from "../../layouts/index.astro";

const posts = await Astro.glob("./posts/*.md");
console.log(posts);
---

<Layout title="Blogs de desarrollo">
  <h1>Blog</h1>

  {
    posts.map((post) => (
      <a class="link" href={post.url}>
        {post.frontmatter.title}
      </a>
    ))
  }

  <style>
    .link {
      background-color: wheat;
      color: black;
      text-decoration: none;
      display: block;
      margin-bottom: 4px;
      font-size: 20px;
    }
  </style>
</Layout>
