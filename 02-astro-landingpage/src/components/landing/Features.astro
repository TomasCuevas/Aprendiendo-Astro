---
import features from "../../config/features.json";
---

<h1 class="text-center font-bold text-5xl mt-10">Features</h1>

<div class="grid-cols-1 md:grid-cols-3 grid gap-4 mt-5 mx-4 md:mx-0">
  {
    features.map((feature) => (
      <div class="bg-slate-800 p-10 rounded-xl">
        <h2 class="text-2xl font-bold my-2">{feature.title}</h2>
        <p>{feature.description}</p>
      </div>
    ))
  }
</div>
