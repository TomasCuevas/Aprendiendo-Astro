---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-5 text-center">Projects</h2>

{
  projects.map((project) => (
    <div class="flex text-center md:text-left mx-4 my-8 bg-zinc-800 p-2 rounded-xl flex-col md:flex-row gap-y-10 md:px-10">
      <div class="flex-1 gap-y-3 flex flex-col justify-center">
        <h2 class="text-3xl font-bold my-2">{project.title}</h2>
        <p>{project.description}</p>
        <div>
          <button class="bg-indigo-500 hover:bg-indigo-400 py-2 px-3 rounded-md">
            More info
          </button>
        </div>
      </div>
      <div class="flex-1 flex justify-center items-center">
        <img src={project.image} alt={project.title} class="w-72 m-auto" />
      </div>
    </div>
  ))
}
